
# Google Cloud 設定
# 設定 Google Cloud 專案 ID
GOOGLE_CLOUD_PROJECT=your-project-id
# 設定 Google Cloud 地區
GOOGLE_CLOUD_LOCATION=us-central1


# 記憶庫設定（Firestore）
# 啟用記憶庫功能
ENABLE_MEMORY_BANK=true
# Firestore 資料庫名稱
FIRESTORE_DATABASE=(default)
# 儲存政策的集合名稱
FIRESTORE_COLLECTION_POLICIES=policies
# 儲存政策執行記錄的集合名稱
FIRESTORE_COLLECTION_EXECUTIONS=policy_executions
# 核心政策文件參考路徑
CORE_POLICIES_DOC_REF=configurations/core_policies
# 嵌入模型名稱
EMBEDDING_MODEL_NAME=text-embedding-004


# 模型設定
# Gemini Pro 版本模型名稱
GEMINI_MODEL_PRO=gemini-2.5-pro
# Gemini Flash 版本模型名稱
GEMINI_MODEL_FLASH=gemini-2.5-flash


# MCP 設定
# Dataplex MCP 伺服器網址（預設為本地端）
# DATAPLEX_MCP_SERVER_URL=http://localhost:8080


# 進階設定
# 最大修復工作執行緒數量
MAX_REMEDIATION_WORKERS=10
