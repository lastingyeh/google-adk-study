# ä½¿ç”¨ uv å¥—ä»¶ç®¡ç†å™¨å®‰è£ä¾è³´é …
install:
	@command -v uv >/dev/null 2>&1 || { echo "uv å°šæœªå®‰è£ã€‚æ­£åœ¨å®‰è£ uv..."; curl -LsSf https://astral.sh/uv/0.8.13/install.sh | sh; source $HOME/.local/bin/env; }
	uv sync

# ==============================================================================
# Playground ç›®æ¨™
# ==============================================================================

# å•Ÿå‹•æœ¬åœ°é–‹ç™¼ playground
playground:
	@echo "==============================================================================="
	@echo "| ğŸš€ æ­£åœ¨å•Ÿå‹•æ‚¨çš„ agent playground...                                         |"
	@echo "|                                                                             |"
	@echo "| ğŸ’¡ è©¦è‘—å•ï¼šå¦‚ä½•å°‡ pandas dataframe å„²å­˜ç‚º CSVï¼Ÿ                            |"
	@echo "|                                                                             |"
	@echo "| ğŸ” é‡è¦ï¼šé¸æ“‡ 'app' è³‡æ–™å¤¾ä»¥èˆ‡æ‚¨çš„ agent äº’å‹•ã€‚                           |"
	@echo "==============================================================================="
	uv run adk web . --port 8501 --reload_agents

# ==============================================================================
# æœ¬åœ°é–‹ç™¼æŒ‡ä»¤
# ==============================================================================

# å•Ÿå‹•å…·æœ‰ç†±é‡è¼‰åŠŸèƒ½çš„æœ¬åœ°é–‹ç™¼ä¼ºæœå™¨
local-backend:
	uv run uvicorn app.fast_api_app:app --host localhost --port 8000 --reload

# ==============================================================================
# å¾Œç«¯éƒ¨ç½²ç›®æ¨™
# ==============================================================================

# é ç«¯éƒ¨ç½² agent
# ç”¨æ³•ï¼šmake deploy [IAP=true] [PORT=8080] - è¨­å®š IAP=true ä»¥å•Ÿç”¨ Identity-Aware Proxyï¼ŒPORT ç”¨æ–¼æŒ‡å®šå®¹å™¨åŸ è™Ÿ
deploy:
	PROJECT_ID=$$(gcloud config get-value project) && \
	gcloud beta run deploy rag-km-agents \
		--source . \
		--memory "4Gi" \
		--project $$PROJECT_ID \
		--region "us-central1" \
		--no-allow-unauthenticated \
		--no-cpu-throttling \
		--labels "created-by=adk" \
		--update-build-env-vars "AGENT_VERSION=$(shell awk -F'"' '/^version = / {print $$2}' pyproject.toml || echo '0.0.0')" \
		--update-env-vars \
		"COMMIT_SHA=$(shell git rev-parse HEAD),DATA_STORE_ID=rag-km-agents-datastore,DATA_STORE_REGION=us" \
		$(if $(IAP),--iap) \
		$(if $(PORT),--port=$(PORT))

# 'make deploy' çš„åˆ¥åï¼Œç”¨æ–¼å‘å¾Œç›¸å®¹
backend: deploy

# ==============================================================================
# åŸºç¤è¨­æ–½è¨­å®š
# ==============================================================================

# ä½¿ç”¨ Terraform è¨­å®šé–‹ç™¼ç’°å¢ƒè³‡æº
setup-dev-env:
	PROJECT_ID=$$(gcloud config get-value project) && \
	(cd deployment/terraform/dev && terraform init && terraform apply --var-file vars/env.tfvars --var dev_project_id=$$PROJECT_ID --auto-approve)

# ==============================================================================
# è³‡æ–™æ“·å– (RAG åŠŸèƒ½)
# ==============================================================================

# åŸ·è¡Œè³‡æ–™æ“·å–ç®¡ç·šä»¥å•Ÿç”¨ RAG åŠŸèƒ½
data-ingestion:
	PROJECT_ID=$$(gcloud config get-value project) && \
	(cd data_ingestion && uv run data_ingestion_pipeline/submit_pipeline.py \
		--project-id=$$PROJECT_ID \
		--region="us-central1" \
		--data-store-id="rag-km-agents-datastore" \
		--data-store-region="us" \
		--service-account="rag-km-agents-rag@$$PROJECT_ID.iam.gserviceaccount.com" \
		--pipeline-root="gs://$$PROJECT_ID-rag-km-agents-rag" \
		--pipeline-name="data-ingestion-pipeline")

# ==============================================================================
# æ¸¬è©¦èˆ‡ç¨‹å¼ç¢¼å“è³ª
# ==============================================================================

# åŸ·è¡Œå–®å…ƒæ¸¬è©¦å’Œæ•´åˆæ¸¬è©¦
test:
	uv sync --dev
	uv run pytest tests/unit && uv run pytest tests/integration

# åŸ·è¡Œç¨‹å¼ç¢¼å“è³ªæª¢æŸ¥ (codespell, ruff, mypy)
lint:
	uv sync --dev --extra lint
	uv run codespell
	uv run ruff check . --diff
	uv run ruff format . --check --diff
	uv run mypy .