install:
	@command -v uv >/dev/null 2>&1 || { echo "æœªå®‰è£ uvï¼Œæ­£åœ¨å®‰è£ uv..."; curl -LsSf https://astral.sh/uv/0.8.13/install.sh | sh; source $HOME/.local/bin/env; }
	uv sync

# ==============================================================================
# Playground å•Ÿå‹•ç›®æ¨™
# ==============================================================================

# å•Ÿå‹•æœ¬åœ°é–‹ç™¼ Playground
playground:
	@echo "==============================================================================="
	@echo "| ğŸš€ å•Ÿå‹•æ‚¨çš„ä»£ç†äºº Playground...                                            |"
	@echo "|                                                                             |"
	@echo "| ğŸ’¡ è©¦è‘—è¼¸å…¥ï¼šHi there, I need help with my garden                          |"
	@echo "|                                                                             |"
	@echo "| ğŸ” é‡è¦ï¼šè«‹é¸æ“‡ 'customer_service' è³‡æ–™å¤¾ä»¥èˆ‡æ‚¨çš„ä»£ç†äººäº’å‹•ã€‚               |"
	@echo "==============================================================================="
	uv run adk web . --port 8501 --reload_agents

# ==============================================================================
# æœ¬åœ°é–‹ç™¼æŒ‡ä»¤
# ==============================================================================

# å•Ÿå‹•æœ¬åœ°å¾Œç«¯ä¼ºæœå™¨ï¼ˆæ”¯æ´ç†±é‡è¼‰ï¼‰
local-backend:
	uv run uvicorn customer_service.fast_api_app:app --host localhost --port 8000 --reload

# ==============================================================================
# å¾Œç«¯éƒ¨ç½²ç›®æ¨™
# ==============================================================================

# é ç«¯éƒ¨ç½²ä»£ç†äºº
# ç”¨æ³•ï¼šmake deploy [IAP=true] [PORT=8080] - è¨­å®š IAP=true å•Ÿç”¨ Identity-Aware Proxyï¼ŒPORT æŒ‡å®šå®¹å™¨åŸ 
deploy:
	PROJECT_ID=$$(gcloud config get-value project) && \
	gcloud beta run deploy pack-customer-service \
		--source . \
		--memory "4Gi" \
		--project $$PROJECT_ID \
		--region "us-central1" \
		--no-allow-unauthenticated \
		--no-cpu-throttling \
		--labels "created-by=adk" \
		--update-build-env-vars "AGENT_VERSION=$(shell awk -F'\"' '/^version = / {print $$2}' pyproject.toml || echo '0.0.0')" \
		--set-env-vars \
		"COMMIT_SHA=$(shell git rev-parse HEAD)" \
		$(if $(IAP),--iap) \
		$(if $(PORT),--port=$(PORT))

# 'make deploy' çš„åˆ¥åï¼Œä¿ç•™ç›¸å®¹æ€§
backend: deploy


# ==============================================================================
# åŸºç¤å»ºè¨­è¨­å®š
# ==============================================================================

# ä½¿ç”¨ Terraform å»ºç«‹é–‹ç™¼ç’°å¢ƒè³‡æº
setup-dev-env:
	PROJECT_ID=$$(gcloud config get-value project) && \
	(cd deployment/terraform/dev && terraform init && terraform apply --var-file vars/env.tfvars --var dev_project_id=$$PROJECT_ID --auto-approve)

# ==============================================================================
# æ¸¬è©¦èˆ‡ç¨‹å¼ç¢¼å“è³ª
# ==============================================================================

# åŸ·è¡Œå–®å…ƒæ¸¬è©¦èˆ‡æ•´åˆæ¸¬è©¦
test:
	uv sync --dev
	uv run pytest tests/unit && uv run pytest tests/integration

# åŸ·è¡Œç¨‹å¼ç¢¼å“è³ªæª¢æŸ¥ï¼ˆcodespell, ruff, mypyï¼‰
lint:
	uv sync --dev --extra lint
	uv run codespell
	uv run ruff check . --diff
	uv run ruff format . --check --diff
	uv run mypy .