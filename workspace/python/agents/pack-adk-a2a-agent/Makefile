	cd tools/a2a-inspector/backend && uv run app.py

# å…§éƒ¨ä½¿ç”¨ï¼šå¦‚æžœå°šæœªå­˜åœ¨ï¼Œå‰‡è¨­å®šæª¢æŸ¥å™¨ï¼ˆåŸ·è¡Œä¸€æ¬¡ï¼‰
# TODO: ç•¶ a2a-inspector ç™¼å¸ƒç‰ˆæœ¬æ™‚æ›´æ–°ç‚º --branch v1.0.0
setup-inspector-if-needed:
	@if [ ! -d "tools/a2a-inspector" ]; then \
		echo "" && \
		echo "ðŸ“¦ é¦–æ¬¡è¨­å®šï¼šæ­£åœ¨å®‰è£ A2A æª¢æŸ¥å™¨..." && \
		echo "" && \
		mkdir -p tools && \
		git clone --quiet https://github.com/a2aproject/a2a-inspector.git tools/a2a-inspector && \
		(cd tools/a2a-inspector && git -c advice.detachedHead=false checkout --quiet 893e4062f6fbd85a8369228ce862ebbf4a025694) && \
		echo "ðŸ“¥ æ­£åœ¨å®‰è£ Python ä¾è³´..." && \
		(cd tools/a2a-inspector && uv sync --quiet) && \
		echo "ðŸ“¥ æ­£åœ¨å®‰è£ Node.js ä¾è³´..." && \
		(cd tools/a2a-inspector/frontend && npm install --silent) && \
		echo "ðŸ”¨ æ­£åœ¨å»ºç½®å‰ç«¯..." && \
		(cd tools/a2a-inspector/frontend && npm run build --silent) && \
		echo "" && \
		echo "âœ… A2A æª¢æŸ¥å™¨è¨­å®šå®Œæˆï¼" && \
		echo ""; \
	fi

# å…§éƒ¨ä½¿ç”¨ï¼šå¦‚æžœéœ€è¦ï¼Œå»ºç½®æª¢æŸ¥å™¨å‰ç«¯
build-inspector-if-needed:
	@if [ -d "tools/a2a-inspector" ] && [ ! -f "tools/a2a-inspector/frontend/public/script.js" ]; then \
		echo "ðŸ”¨ æ­£åœ¨å»ºç½®æª¢æŸ¥å™¨å‰ç«¯..."; \
		cd tools/a2a-inspector/frontend && npm run build; \
	fi

# ==============================================================================
# å¾Œç«¯éƒ¨ç½²ç›®æ¨™
# ==============================================================================

# é ç«¯éƒ¨ç½²ä»£ç†ç¨‹å¼
# ç”¨æ³•ï¼šmake deploy [IAP=true] [PORT=8080] - è¨­å®š IAP=true ä»¥å•Ÿç”¨ Identity-Aware Proxyï¼ŒPORT æŒ‡å®šå®¹å™¨é€£æŽ¥åŸ 
deploy:
	PROJECT_ID=$$(gcloud config get-value project) && \
	PROJECT_NUMBER=$$(gcloud projects describe $$PROJECT_ID --format="value(projectNumber)") && \
	gcloud beta run deploy pack-adk-a2a-agent \
		--source . \
		--memory "4Gi" \
		--project $$PROJECT_ID \
		--region "us-central1" \
		--no-allow-unauthenticated \
		--no-cpu-throttling \
		--labels "created-by=adk" \
		--update-build-env-vars "AGENT_VERSION=$(shell awk -F'"' '/^version = / {print $$2}' pyproject.toml || echo '0.0.0')" \
		--update-env-vars \
		"COMMIT_SHA=$(shell git rev-parse HEAD),APP_URL=https://pack-adk-a2a-agent-$$PROJECT_NUMBER.us-central1.run.app" \
		$(if $(IAP),--iap) \
		$(if $(PORT),--port=$(PORT))

# 'make deploy' çš„åˆ¥åï¼Œç”¨æ–¼å‘å¾Œç›¸å®¹
backend: deploy

# ==============================================================================
# åŸºç¤Žè¨­æ–½è¨­å®š
# ==============================================================================

# ä½¿ç”¨ Terraform è¨­å®šé–‹ç™¼ç’°å¢ƒè³‡æº
setup-dev-env:
	PROJECT_ID=$$(gcloud config get-value project) && \
	(cd deployment/terraform/dev && terraform init && terraform apply --var-file vars/env.tfvars --var dev_project_id=$$PROJECT_ID --auto-approve)

# ==============================================================================
# æ¸¬è©¦èˆ‡ç¨‹å¼ç¢¼å“è³ª
# ==============================================================================

# åŸ·è¡Œå–®å…ƒæ¸¬è©¦å’Œæ•´åˆæ¸¬è©¦
test:
	uv sync --dev
	uv run pytest tests/unit && uv run pytest tests/integration

# åŸ·è¡Œç¨‹å¼ç¢¼å“è³ªæª¢æŸ¥ (codespell, ruff, mypy)
lint:
	uv sync --dev --extra lint
	uv run codespell
	uv run ruff check . --diff
	uv run ruff format . --check --diff
	uv run mypy .

# ==============================================================================
# Gemini Enterprise æ•´åˆ
# ==============================================================================

# å°‡å·²éƒ¨ç½²çš„ä»£ç†ç¨‹å¼è¨»å†Šåˆ° Gemini Enterprise
# ç”¨æ³•ï¼šmake register-gemini-enterprise (äº’å‹•å¼ - å°‡æç¤ºè¼¸å…¥æ‰€éœ€è©³ç´°è³‡è¨Š)
# å°æ–¼éžäº’å‹•å¼ä½¿ç”¨ï¼Œè¨­å®šç’°å¢ƒè®Šæ•¸ï¼šID æˆ– GEMINI_ENTERPRISE_APP_ID (å®Œæ•´çš„ GE è³‡æºåç¨±)
# å¯é¸ç’°å¢ƒè®Šæ•¸ï¼šGEMINI_DISPLAY_NAME, GEMINI_DESCRIPTION, AGENT_CARD_URL
register-gemini-enterprise:
	@PROJECT_ID=$$(gcloud config get-value project 2>/dev/null) && \
	PROJECT_NUMBER=$$(gcloud projects describe $$PROJECT_ID --format="value(projectNumber)" 2>/dev/null) && \
	uvx agent-starter-pack@0.27.0 register-gemini-enterprise \
		--agent-card-url="https://pack-adk-a2a-agent-$$PROJECT_NUMBER.us-central1.run.app/a2a/app/.well-known/agent-card.json" \
		--deployment-target="cloud_run" \
		--project-number="$$PROJECT_NUMBER"
